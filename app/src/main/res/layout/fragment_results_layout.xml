<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tvRes"
        android:layout_margin="4dp"/>

    <GridLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/tvRes">
    </GridLayout>

    <Button android:layout_width="match_parent" android:layout_above="@+id/btnPdf" android:layout_height="wrap_content" android:id="@+id/btnMail"
        android:layout_margin="10dp"
        android:text="@string/send_in_mail"
        android:background="#0dbf66" />

    <Button android:layout_width="match_parent" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:id="@+id/btnPdf"
        android:layout_margin="10dp"
        android:text="@string/export_to_pdf"
        android:background="#0dbf66" />

</RelativeLayout>
